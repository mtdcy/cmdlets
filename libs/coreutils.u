# GNU File, Shell, and Text utilities

# shellcheck disable=SC2034
upkg_lic="GPL-3.0-or-later"
upkg_ver=9.8
upkg_url=https://ftpmirror.gnu.org/gnu/coreutils/coreutils-$upkg_ver.tar.xz
upkg_sha=e6d4fd2d852c9141a1c2a18a13d146a0cd7e45195f72293a4e4c044ec6ccca15
upkg_dep=(gmp libiconv)

upkg_args=(
    --disable-option-checking
    --enable-silent-rules
    --disable-dependency-tracking

    --without-selinux

    --disable-nls
    --disable-rpath

    # install common used, gnu version of bsd|busybox utils.

    --disable-doc
    --disable-man
)

[[ "${upkg_dep[*]}" =~ gmp ]] || upkg_args+=(--without-gmp) # make utils more generic
[[ "${upkg_dep[*]}" =~ libiconv ]] || upkg_args+=(--without-libiconv-prefix)

upkg_static() {
    is_glibc && dynamicalize

    configure &&

    make &&

    # check => there are some FAILs, help-version.sh|uid|zero
    # make check &&

    make install-exec &&

    # virsual verify
    check yes --version
}

